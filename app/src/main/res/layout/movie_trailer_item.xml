<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imv_trailer"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/poster_ex"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/trailers"
        app:layout_constraintStart_toStartOf="@id/imv_trailer"
        app:layout_constraintEnd_toEndOf="@id/imv_trailer"
        app:layout_constraintTop_toTopOf="@id/imv_trailer"
        app:layout_constraintBottom_toBottomOf="@id/imv_trailer"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Hotel"
        app:layout_constraintTop_toBottomOf="@id/imv_trailer"
        app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>