<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_movie_poster"
        style="@style/AppTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_tab_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingEnd="@dimen/poster_container_padding"
        android:paddingStart="@dimen/poster_container_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablayout_movie_poster" />

</android.support.constraint.ConstraintLayout>